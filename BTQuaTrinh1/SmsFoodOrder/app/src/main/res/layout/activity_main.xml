<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgLabel"
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="250dp"
        app:srcCompat="@drawable/jolly_bee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="#FBE207"
                android:text="Size"
                android:textColor="#F80909"
                android:textSize="32sp" />

            <RadioGroup
                android:id="@+id/radgrpSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radMed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:layout_marginLeft="50dp"
                    android:checked="false"/>

                <RadioButton
                    android:id="@+id/radLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Large"
                    android:layout_marginLeft="50dp"
                    android:checked="false"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="#FBE207"
                android:text="Extra"
                android:textColor="#F80909"
                android:textSize="32sp" />

            <RadioGroup
                android:id="@+id/radgrpExtra"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radSalad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salad"
                    android:layout_marginLeft="50dp"
                    android:checked="false"/>

                <RadioButton
                    android:id="@+id/radBanhTrang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Banh Trang"
                    android:layout_marginLeft="50dp"
                    android:checked="false"/>
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txtMainFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="Main Dish"
        android:textColor="#EF0808"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/chkFriedChicken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fried Chicken"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/chkFriedPotato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fried Potato" />

            <CheckBox
                android:id="@+id/chkHamburger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamburger" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/chkChickenNugget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicken Nugget" />

            <CheckBox
                android:id="@+id/chkSandwich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sandwich" />

            <CheckBox
                android:id="@+id/chkIceCream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ice Cream" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtMainFood2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="Baverage"
        android:textColor="#EF0808"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkCoca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/chkSevenUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seven Up" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkFanta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fanta" />

            <CheckBox
                android:id="@+id/chkAquafina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aquafina" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFC107"
        android:text="Place your order"
        android:textColor="#2196F3"
        android:textSize="30sp" />

</LinearLayout>